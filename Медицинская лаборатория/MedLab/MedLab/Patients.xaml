        <TextBox x:Name="_10" HorizontalAlignment="Left" Margin="544,166,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="73" FontFamily="Comic Sans MS"/>
        <TextBox x:Name="_11" HorizontalAlignment="Left" Margin="544,203,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="73" FontFamily="Comic Sans MS"/>
        <Label Content="Код пользователя" HorizontalAlignment="Left" Margin="95,45,0,0" VerticalAlignment="Top" FontFamily="Comic Sans MS" FontWeight="Bold"/>
        <Label Content="Фамилия" HorizontalAlignment="Left" Margin="95,82,0,0" VerticalAlignment="Top" FontFamily="Comic Sans MS" FontWeight="Bold"/>
